        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="tem:COMPOSITION">
        <Content archetype_id="openEHR-EHR-OBSERVATION.fagerstrom.v0"
            max="1" path="/content" xsi:type="tem:OBSERVATION">
            <Rule
                name="Wann nach dem Aufstehen rauchen Sie Ihre erste Zigarette?" path="/data[at0001]/events[at0002]/data[at0003]/items[at0004]"/>
            <Rule
                name="Finden Sie es schwierig, an Orten, wo das Rauchen verboten ist, das Rauchen zu unterlassen?" path="/data[at0001]/events[at0002]/data[at0003]/items[at0009]"/>
            <Rule
                name="Auf welche Zigarette würden Sie nicht verzichten wollen?" path="/data[at0001]/events[at0002]/data[at0003]/items[at0012]"/>
            <Rule
                name="Wie viele Zigaretten rauchen Sie im allgemeinen pro Tag?" path="/data[at0001]/events[at0002]/data[at0003]/items[at0015]"/>
            <Rule
                name="Rauchen Sie am Morgen im allgemeinen mehr als am Rest des Tages?" path="/data[at0001]/events[at0002]/data[at0003]/items[at0020]"/>
            <Rule
                name="Kommt es vor, dass Sie rauchen, wenn Sie krank sind und tagsüber im Bett bleiben müssen?" path="/data[at0001]/events[at0002]/data[at0003]/items[at0023]"/>
            <Rule path="/data[at0001]/events[at0002]/data[at0003]/items[at0026]">
