definition
	CLUSTER[at0000] matches {	-- FHIR_Medikamentenstatus
		items cardinality matches {1; unordered} matches {
			ELEMENT[at0001] matches {	-- Status
				value matches {
					DV_CODED_TEXT matches {
						defining_code matches {
							[local::
							at0002, 	-- Aktiv 
							at0003, 	-- Abgeschlossen 
							at0004, 	-- Eingegeben in Fehler 
							at0005, 	-- Beabsichtigt 
							at0006, 	-- Gestoppt
							at0007, 	-- In Wartestellung 
							at0008, 	-- Unbekannt 
							at0009]	-- Nicht-Aufgenommen 
						}
					}
				}
			}
			allow_archetype CLUSTER[at0013] occurrences matches {0..*} matches {	-- Erweiterung
				include
					archetype_id/value matches {/.*/}
			}
		}
	}


ontology
	term_definitions = <
		["de"] = <
			items = <
				["at0000"] = <
					text = <"FHIR_Medikamentenstatus">
					description = <"Ein Code, der die Einschätzung des Patienten oder einer anderen Ursache über den Zustand des verwendeten Medikaments darstellt, mit dem sich diese Angabe befasst. Im Allgemeinen wird dies aktiv oder abgeschlossen sein.">
				>
				["at0001"] = <
					text = <"Status">
					description = <"Status der Einnahme des Medikamentes im Verlauf oder nach dem Ende der Therapie bzw. der Nachsorge.">
				>
				["at0002"] = <
					text = <"Aktiv ">
					description = <"Das Medikament wird noch eingenommen.">
				>
				["at0003"] = <
					text = <"Abgeschlossen ">
					description = <"Das Medikament wird nicht mehr eingenommen.">
				>
				["at0004"] = <
					text = <"Eingegeben in Fehler ">
					description = <"Einige der Aktionen, die durch die Medikationsanweisung impliziert werden, können bereits stattgefunden haben. ">
				>
				["at0005"] = <
					text = <"Beabsichtigt ">
					description = <"Die Medikation kann irgendwann in der Zukunft eingenommen werden.">
				>
				["at0006"] = <
					text = <"Gestoppt">
					description = <"Die von der Anweisung implizierten Aktionen wurden dauerhaft gestoppt, bevor alle von ihnen eingetreten sind. Dies sollte nicht verwendet werden, wenn die Anweisung versehentlich eingegeben wurde.">
				>
				["at0007"] = <
					text = <"In Wartestellung ">
					description = <"Die von der Anweisung implizierten Aktionen wurden vorübergehend gestoppt, werden aber voraussichtlich später fortgesetzt. Kann auch als \"ausgesetzt\" bezeichnet werden.">
				>
				["at0008"] = <
					text = <"Unbekannt ">
					description = <"Der Zustand der Medikamenteneinnahme ist derzeit nicht bekannt.">
				>
				["at0009"] = <
					text = <"Nicht-Aufgenommen ">
					description = <"Das Medikament wurde vom Patienten nicht verbraucht.">
				>
				["at0013"] = <
					text = <"Erweiterung">
					description = <"Zusätzliche Informationen zur Erfassung lokaler Inhalte oder Anpassung an andere Referenzmodelle/Formalismen.">
					comment = <"Zum Beispiel: Lokaler Informationsbedarf oder zusätzliche Metadaten zur Anpassung an FHIR-Ressourcen oder CIMI-Modelle.">
				>
			>
		>
		["en-us"] = <
			items = <
				["at0000"] = <
					text = <"FHIR_MedicationStatus">
					description = <"A code that represents the patient's or other cause's assessment of the status of the drug in use with which this indication is concerned. Generally, this will be active or completed.">
				>
				["at0001"] = <
					text = <"Status">
					description = <"Status of taking the drug during the course or after the end of therapy or follow-up.">
				>
				["at0002"] = <
					text = <"active">
					description = <"The medication is still being taken.">
				>
				["at0003"] = <
					text = <"completed">
					description = <"The medication is no longer being taken.">
				>
				["at0004"] = <
					text = <"entered-in-error">
					description = <"Some of the actions that are implied by the medication statement may have occurred. For example, the patient may have taken some of the medication. Clinical decision support systems should take this status into account.">
				>
				["at0005"] = <
					text = <"intended">
					description = <"The medication may be taken at some time in the future.">
				>
				["at0006"] = <
					text = <"stopped">
					description = <"Actions implied by the statement have been permanently halted, before all of them occurred. This should not be used if the statement was entered in error.">
				>
				["at0007"] = <
					text = <"on-hold">
					description = <"Actions implied by the statement have been temporarily halted, but are expected to continue later. May also be called 'suspended'.">
				>
				["at0008"] = <
					text = <"unknown">
					description = <"The state of the medication use is not currently known">
				>
				["at0009"] = <
					text = <"not-taken">
					description = <"The medication was not consumed by the patient.">
				>
				["at0013"] = <
					text = <"Extension">
					description = <"Additional information required to capture local content or to align with other reference models/formalisms.">
					comment = <"Comment: For example: local information requirements or additional metadata to align with FHIR or CIMI equivalents.">
				>
			>
		>
	>
