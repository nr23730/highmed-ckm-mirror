	>

definition
	CLUSTER[at0000] matches {    -- Soziale Aktivitäten nach Nikolaus (Akt)
		items cardinality matches {1..*; unordered} matches {
			ELEMENT[at0080] occurrences matches {0..1} matches {    -- Beruf
				value matches {
					DV_TEXT matches {*}
				}
			}
			ELEMENT[at0060] occurrences matches {0..1} matches {    -- Hobbies
				value matches {
					0|[local::at0065],
					1|[local::at0066]
				}
			}
			ELEMENT[at0006] occurrences matches {0..1} matches {    -- Aufzählung der Hobbies und/oder Interessen
				value matches {
					DV_TEXT matches {*}
				}
			}
			ELEMENT[at0061] occurrences matches {0..1} matches {    -- Haustiere
				value matches {
					1|[local::at0067],
					0|[local::at0068]
				}
			}
			ELEMENT[at0062] occurrences matches {0..1} matches {    -- Verlassen der Wohnung
				value matches {
					1|[local::at0069],
					1|[local::at0070],
					0|[local::at0071],
					0|[local::at0072]
				}
			}
			ELEMENT[at0063] occurrences matches {0..1} matches {    -- Entwickeln der Interessen
				value matches {
					1|[local::at0073],
					1|[local::at0074],
					0|[local::at0075],
					0|[local::at0076]
				}
			}
			ELEMENT[at0064] occurrences matches {0..1} matches {    -- Zufriedenheit
				value matches {
					1|[local::at0077],
					0|[local::at0078],
					0|[local::at0079]
				}
			}
			ELEMENT[at0024] occurrences matches {0..1} matches {    -- Zwischensumme Aktivitäten
				value matches {
					DV_COUNT matches {
						magnitude matches {|0..5|}
					}
				}
			}
		}
	}


