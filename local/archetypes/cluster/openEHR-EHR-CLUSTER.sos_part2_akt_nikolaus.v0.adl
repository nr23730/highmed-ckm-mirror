concept
	[at0000]	-- Soziale Aktivitäten nach Nikolaus (Akt)
language
	original_language = <[ISO_639-1::de]>
description
	original_author = <
		["name"] = <"Bianca Frenzel">
		["organisation"] = <"Medizinische Hochschule Hannover">
