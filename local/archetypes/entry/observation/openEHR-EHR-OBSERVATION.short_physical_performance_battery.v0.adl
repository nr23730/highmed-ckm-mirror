													}
												}
											}
											ELEMENT[at0017] occurrences matches {0..1} matches {	-- Punkte
												value matches {
													DV_COUNT matches {
														magnitude matches {|0..4|}
													}
												}
											}
										}
									}
									CLUSTER[at0004] occurrences matches {0..1} matches {	-- 4m Gangstrecke
