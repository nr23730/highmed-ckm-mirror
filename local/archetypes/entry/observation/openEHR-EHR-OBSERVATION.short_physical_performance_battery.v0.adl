												value matches {
													DV_DURATION matches {
														value matches {PTS}
													}
												}
											}
											ELEMENT[at0013] occurrences matches {0..1} matches {	-- Punkte
												value matches {
													DV_COUNT matches {
														magnitude matches {|0..4|}
													}
												}
											}
										}
									}
									ELEMENT[at0014] occurrences matches {0..1} matches {	-- Gesamtpunktzahl
										value matches {
											DV_COUNT matches {
												magnitude matches {|<=12|}
											}
										}
									}
									ELEMENT[at0015] occurrences matches {0..1} matches {	-- Bemerkungen
										value matches {
											DV_TEXT matches {*}
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}


