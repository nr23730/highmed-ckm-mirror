definition
	OBSERVATION[at0000] matches {	-- Soziale Situation nach Nikolaus
		data matches {
			HISTORY[at0001] matches {	-- Event Series
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..1} matches {	-- Jedes Ereignis
						data matches {
							ITEM_TREE[at0003] matches {	-- Baum
								items cardinality matches {0..*; unordered} matches {
									allow_archetype CLUSTER[at0011] occurrences matches {0..*} matches {	-- Teil 1: Soziale Kontakte und Unterstützung
										include
											archetype_id/value matches {/openEHR-EHR-CLUSTER\.soziale_kontakte_und_unterstuetzung_nach_nikolaus(-[a-zA-Z0-9_]+)*\.v0/}
									}
									allow_archetype CLUSTER[at0012] occurrences matches {0..*} matches {	-- Teil 2: Soziale Aktivitäten
										include
											archetype_id/value matches {/openEHR-EHR-CLUSTER\.soziale_aktivitaeten_nach_nikolaus(-[a-zA-Z0-9_]+)*\.v0/}
									}
									allow_archetype CLUSTER[at0013] occurrences matches {0..*} matches {	-- Teil 3: Wohnsituation
										include
											archetype_id/value matches {/openEHR-EHR-CLUSTER\.wohnsituation_nach_nikolaus(-[a-zA-Z0-9_]+)*\.v0/}
									}
									allow_archetype CLUSTER[at0014] occurrences matches {0..*} matches {	-- Teil 4: Ökonomische Verhältnisse
										include
											archetype_id/value matches {/openEHR-EHR-CLUSTER\.oekonomische_verhaeltnisse_nach_nikolaus(-[a-zA-Z0-9_]+)*\.v0/}
									}
									ELEMENT[at0004] occurrences matches {0..1} matches {	-- Gesamtpunktzahl
										value matches {
											DV_COUNT matches {
												magnitude matches {|>=0|}
											}
										}
									}
									ELEMENT[at0005] occurrences matches {0..1} matches {	-- Bemerkungen
										value matches {
											DV_TEXT matches {*}
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}


