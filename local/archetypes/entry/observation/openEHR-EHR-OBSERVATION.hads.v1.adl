											}
											ELEMENT[at0087] occurrences matches {0..1} matches {    -- Severity
												value matches {
													DV_CODED_TEXT matches {*}
												}
											}
										}
									}
									CLUSTER[at0083] occurrences matches {0..1} matches {    -- Anxiety
										items cardinality matches {1..*; unordered} matches {
