													0|[local::at0063]
												}
											}
											ELEMENT[at0015] occurrences matches {0..1} matches {    -- Looking forward
												value matches {
													0|[local::at0068],
													1|[local::at0069],
													2|[local::at0070],
													3|[local::at0071]
												}
											}
											ELEMENT[at0017] occurrences matches {0..1} matches {    -- Enjoying book
												value matches {
													0|[local::at0076],
													1|[local::at0077],
													2|[local::at0078],
													3|[local::at0079]
												}
											}
											ELEMENT[at0019] occurrences matches {0..1} matches {    -- Depression score
												value matches {
