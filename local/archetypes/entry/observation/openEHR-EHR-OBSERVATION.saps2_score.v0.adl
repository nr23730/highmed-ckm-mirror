	details = <
		["de"] = <
			language = <[ISO_639-1::de]>
			purpose = <"Bewertet den Schweregrad der Erkrankung bei Patienten ab 18 Jahren. Es hilft, das Risiko der Krankenhaussterblichkeit auf Grundlage physiologischer Daten vorherzusagen, die während der ersten 24 Stunden nach Aufnahme auf die Intensivstation erhoben wurden.">
			use = <"">
			keywords = <"Schweregrad der Erkrankung, Intensivmedizinisches Bewertungssystem, Sterblichkeitsprognose", ...>
			misuse = <"Nicht zur Steuerung der individuellen Behandlung vorgesehen.">
			copyright = <"© HiGHmed">
		>
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"assess the severity of disease for patients aged 18 and older. It helps predict the risk of hospital mortality based on physiological data collected during the first 24 hours of ICU admission">
			use = <"">
			keywords = <"Severity of illness,ICU scoring system,Mortality prediction", ...>
			misuse = <"Not intended to guide individual treatment.">
			copyright = <"© HiGHmed">
		>
	>
