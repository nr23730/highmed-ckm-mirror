									ELEMENT[at0032] matches {    -- Type of admission
										value matches {
											0|[local::at0069],
											6|[local::at0070],
											8|[local::at0071]
										}
									}
									ELEMENT[at0010] matches {    -- Heart rate (bpm)
										value matches {
											11|[local::at0015],
											2|[local::at0016],
											0|[local::at0017],
											4|[local::at0018],
											7|[local::at0019]
										}
									}
									ELEMENT[at0011] matches {    -- Systolic blood pressure (mmHg)
										value matches {
											13|[local::at0020],
											5|[local::at0021],
											0|[local::at0022],
											2|[local::at0023]
										}
									}
									ELEMENT[at0012] matches {    -- Temperature (C or F)
										value matches {
											0|[local::at0073],
											3|[local::at0074]
										}
									}
									ELEMENT[at0013] matches {    -- Glasgow coma score
										value matches {
											26|[local::at0038],
											13|[local::at0037],
											7|[local::at0036],
											5|[local::at0035],
											0|[local::at0034]
										}
									}
									ELEMENT[at0014] matches {    -- PaO₂ (mmHg)/FiO₂, (%) if on mechanical ventilation or CPAP
										value matches {
											0|[local::at0042],
											11|[local::at0039],
											9|[local::at0040],
											6|[local::at0041]
										}
									}
									ELEMENT[at0025] matches {    -- Urine output (L/24h)
										value matches {
											11|[local::at0046],
											4|[local::at0047],
											0|[local::at0048]
										}
									}
									ELEMENT[at0024] matches {    -- Serum Urea (g/L) or BUN (mg/dL)
										value matches {
											0|[local::at0043],
											6|[local::at0044],
											10|[local::at0045]
										}
									}
									ELEMENT[at0026] matches {    -- Sodium (mEq/L)
										value matches {
											5|[local::at0049],
											0|[local::at0050],
											1|[local::at0051]
										}
									}
									ELEMENT[at0027] matches {    -- Potassium (mEq/L)
										value matches {
											3|[local::at0053],
											0|[local::at0054]
										}
									}
									ELEMENT[at0028] matches {    -- Bicarbonate (mEq/L)
										value matches {
											6|[local::at0056],
											3|[local::at0057],
											0|[local::at0058]
										}
									}
									ELEMENT[at0029] matches {    -- Bilirubin (mg/dL)
										value matches {
											0|[local::at0059],
											4|[local::at0060],
											9|[local::at0061]
										}
									}
									ELEMENT[at0030] matches {    -- White blood cells/mm³
										value matches {
											12|[local::at0062],
											0|[local::at0063],
											3|[local::at0064]
										}
									}
									ELEMENT[at0031] matches {    -- Chronic diseases
										value matches {
											0|[local::at0065],
											9|[local::at0066],
											10|[local::at0067],
											17|[local::at0068]
										}
									}
									ELEMENT[at0033] occurrences matches {0..1} matches {    -- Total score
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..163|}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0083] matches {*}    -- Item tree
		}
	}


