definition
	OBSERVATION[at0000] matches {	-- Barthel Index nach dem Hamburger Manual
		data matches {
			HISTORY[at0001] matches {	-- Event Series
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..1} matches {	-- Jedes Ereignis
						data matches {
							ITEM_TREE[at0003] matches {	-- Baum
								items cardinality matches {11..*; unordered} matches {
									ELEMENT[at0004] matches {	-- Essen
										value matches {
											0|[local::at0007], 	-- Kein selbstständiges Einnehmen UND keine MS/PEG-Ernährung
											5|[local::at0006], 	-- Hilfe bei mundgerechter Vorbereitung, aber selbstständiges Einnehmen ODER Hilfe bei PEG-Beschickung/-Versorgung
											10|[local::at0005]  	-- Komplett selbstständig ODER selbstständige PEG-Beschickung/-Versorgung
										}
									}
									ELEMENT[at0008] matches {	-- Aufsetzen & Umsetzen
										value matches {
											0|[local::at0012], 	-- Wird faktisch nicht aus dem Bett transferiert
											5|[local::at0011], 	-- Erhebliche Hilfe (geschulte Laienhilfe oder professionelle Hilfe)
											10|[local::at0010], 	-- Aufsicht oder geringe Hilfe (ungeschulte Laienhilfe)
											15|[local::at0009]  	-- Komplett selbstständig aus liegender Position in (Roll-)Stuhl und zurück
										}
									}
									ELEMENT[at0013] matches {	-- Sich Waschen
										value matches {
											0|[local::at0015], 	-- Erfüllt "5" nicht
											5|[local::at0014]  	-- Vor Ort komplett selbstständig inkl. Zähneputzen, Rasieren und Frisieren
										}
									}
									ELEMENT[at0016] matches {	-- Toilettenbenutzung
										value matches {
											0|[local::at0019], 	-- Benutzt faktisch weder Toilette noch Toilettenstuhl
											5|[local::at0018], 	-- Vor Ort Hilfe oder Aufsicht bei Toiletten- oder Toilettenstuhlbenutzung oder deren Spülung/ Reinigung erforderlich
											10|[local::at0017]  	-- Vor Ort komplett selbstständige Nutzung von Toilette oder Toilettenstuhl inkl. Spülung/Reinigung
										}
									}
									ELEMENT[at0023] matches {	-- Baden/Duschen
										value matches {
											0|[local::at0025], 	-- Erfüllt "5" nicht
											5|[local::at0024]  	-- Selbstständiges Baden oder Duschen inkl. Ein-/Ausstieg, sich reinigen und abtrocknen
										}
									}
									ELEMENT[at0026] matches {	-- Aufstehen & Gehen
										value matches {
											0|[local::at0030], 	-- Erfüllt "5" nicht
											5|[local::at0029], 	-- Mit Laienhilfe oder Gehwagen vom Sitz in den Stand kommen und Strecken im Wohnbereich bewältigen alternativ: im Wohnbereich komplett selbstständig im Rollstuhl
											10|[local::at0028], 	-- Ohne Aufsicht oder personelle Hilfe vom Sitz in den Stand kommen und mindestens 50m mit Hilfe eines Gehstockes gehen
											15|[local::at0027]  	-- Ohne Aufsicht oder personelle Hilfe vom Sitz in den Stand kommen und mindestens 50m ohne Gehwagen (aber ggf. mit Stöcken/Gehstützen) gehen
										}
									}
									ELEMENT[at0031] matches {	-- Treppensteigen
										value matches {
											0|[local::at0034], 	-- Erfüllt "5" nicht
											5|[local::at0033], 	-- Mit Aufsicht oder Laienhilfe mind. ein Stockwerk hinauf und hinunter
											10|[local::at0032]  	-- Ohne Aufsicht oder personelle Hilfe (ggf. inkl. Stöcken/Gehstützen) mindestens ein Stockwerk hinauf- und hinuntersteigen
										}
									}
									ELEMENT[at0035] matches {	-- An- und Auskleiden
										value matches {
											0|[local::at0038], 	-- Erfüllt "5" nicht
											5|[local::at0037], 	-- Kleidet mindestens den Oberkörper in angemessener Zeit selbstständig an und aus, sofern die Utensilien in greifbarer Nähe sind
											10|[local::at0036]  	-- Zieht sich in angemessener Zeit selbstständig Tageskleidung, Schuhe (und ggf. benötigte Hilfsmittel z.B. Antithrombose-Strümpfe, Prothesen) an und aus
										}
									}
									ELEMENT[at0039] matches {	-- Stuhlinkontinenz
										value matches {
											0|[local::at0042], 	-- Ist durchschnittlich mehr als 1x/Woche stuhlinkontinent
											5|[local::at0041], 	-- Ist durchschnittlich nicht mehr als 1x/Woche stuhlinkontinent oder benötigt Hilfe bei rektalen Abführmaßnahmen / AP-Versorgung
											10|[local::at0040]  	-- Ist stuhlkontinent, ggf. selbstständig bei rektalen Abführmaßnahmen oder AP-Versorgung
										}
									}
									ELEMENT[at0043] matches {	-- Harninkontinenz
										value matches {
											0|[local::at0046], 	-- Ist durchschnittlich mehr als 1x/Tag harninkontinent
											5|[local::at0045], 	-- Kompensiert seine Harninkontinenz selbstständig und mit überwiegendem Erfolg (durchschnittlich nicht mehr als 1x/Tag Einnässen von Kleidung oder Bettwäsche) oder benötigt Hilfe bei der Versorgung seines Harnkathetersystems
											10|[local::at0044]  	-- Ist harnkontinent oder kompensiert seine Harninkontinenz / versorgt seinen DK komplett selbstständig und mit Erfolg (kein Einnässen von Kleidung oder Bettwäsche)
										}
									}
									ELEMENT[at0047] matches {	-- Gesamtpunktzahl
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..100|}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}


