definition
	EVALUATION[at0000] matches {    -- Tumorboard Empfehlung
		data matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0009] occurrences matches {0..1} matches {    -- Fragestellung an das Tumorboard
						value matches {
							DV_TEXT matches {*}
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0026,    -- Initiierung von NGS
									at0027,    -- Erweiterte molekulare Diagnostik
									at0028,    -- Therapierelevanz des Panelbefundes
									at0029]    -- Studienteilnahme
								}
							}
						}
					}
					ELEMENT[at0025] occurrences matches {0..1} matches {    -- Vorschlag vom behandelnden Arzt
						value matches {
							DV_TEXT matches {*}
						}
					}
					CLUSTER[at0011] occurrences matches {1..*} matches {    -- Tumorboard Empfehlung
						items cardinality matches {1..*; unordered} matches {
							ELEMENT[at0002] matches {    -- Empfehlung
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0003] occurrences matches {0..*} matches {    -- Begründung
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0014] occurrences matches {0..1} matches {    -- Priorität
								value matches {
									DV_COUNT matches {*}
								}
							}
							allow_archetype CLUSTER[at0019] occurrences matches {0..1} matches {    -- Evidenz
								include
									archetype_id/value matches {/.*|openEHR-EHR-CLUSTER\.clinical_evidence\.v1/}
							}
							ELEMENT[at0020] occurrences matches {0..1} matches {    -- Leitlinien-basierte Empfehlung
								value matches {
									DV_BOOLEAN matches {*}
								}
							}
						}
					}
					ELEMENT[at0021] occurrences matches {0..1} matches {    -- Grund für Abweichung von Leitlinie
						value matches {
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {    -- Vorstellung in der Humangenetik
						value matches {
							DV_TEXT matches {*}
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0015,    -- notwendig
									at0016,    -- empfehlenswert
									at0017,    -- nicht notwendig
									at0018]    -- nicht zutreffend
								}
							}
						}
					}
					ELEMENT[at0030] occurrences matches {0..1} matches {    -- Wiedervorstellung
						value matches {
							DV_BOOLEAN matches {*}
						}
					}
					ELEMENT[at0031] occurrences matches {0..1} matches {    -- Nachsorge
						value matches {
							DV_BOOLEAN matches {*}
						}
					}
					allow_archetype CLUSTER[at0008] occurrences matches {0..*} matches {    -- Details zur Empfehlung
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0006] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0007] occurrences matches {0..*} matches {    -- Erweiterung
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}


