definition
	EVALUATION[at0000] matches {	-- Bewertung des Gesundheitsrisikos
		data matches {
			ITEM_TREE[at0001] matches {	-- Baum
				items cardinality matches {1..*; ordered} matches {
					ELEMENT[at0003] matches {	-- Gesundheitsrisiko
						value matches {
							DV_TEXT matches {*}
						}
					}
					CLUSTER[at0005] occurrences matches {0..*} matches {	-- Risikofaktoren
						items cardinality matches {1..*; unordered} matches {
							ELEMENT[at0006] matches {	-- Risikofaktor
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0007] occurrences matches {0..1} matches {	-- Risikofaktor vorhanden
								value matches {
									DV_CODED_TEXT matches {
										defining_code matches {
											[local::
											at0008, 	-- Vorhanden
											at0009, 	-- Unbekannt
											at0010]	-- Nicht vorhanden
										}
									}
								}
							}
							ELEMENT[at0011] occurrences matches {0..1} matches {	-- Beschreibung
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0012] occurrences matches {0..1} matches {	-- Identifizierungszeitpunkt
								value matches {
									DV_DATE_TIME matches {*}
								}
							}
							ELEMENT[at0013] occurrences matches {0..1} matches {	-- Abgeschwächt
								value matches {
									DV_BOOLEAN matches {
										value matches {True}
									}
								}
							}
							ELEMENT[at0014] occurrences matches {0..1} matches {	-- Link zum Nachweis
								value matches {
									DV_URI matches {*}
								}
							}
							allow_archetype CLUSTER[at0015] occurrences matches {0..*} matches {	-- Detail
								include
									archetype_id/value matches {/.*/}
							}
							ELEMENT[at0016] occurrences matches {0..1} matches {	-- Kommentar
								value matches {
									DV_TEXT matches {*}
								}
							}
						}
					}
					ELEMENT[at0017] occurrences matches {0..1} matches {	-- Risikobewertung
						value matches {
							DV_TEXT matches {*}
							DV_PROPORTION matches {*}
							C_DV_QUANTITY <
								property = <[openehr::380]>
								list = <
									["1"] = <
										units = <"1">
									>
								>
							>
						}
					}
					ELEMENT[at0018] occurrences matches {0..1} matches {	-- Bewertungstyp
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0019, 	-- Relatives Risiko 
									at0020]	-- Absolutes Risiko
								}
							}
						}
					}
					ELEMENT[at0021] occurrences matches {0..1} matches {	-- Zeitraum
						value matches {
							DV_DURATION matches {*}
						}
					}
					ELEMENT[at0022] occurrences matches {0..1} matches {	-- Begründung
						value matches {
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0023] occurrences matches {0..1} matches {	-- Kommentar
						value matches {
							DV_TEXT matches {*}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0002] matches {	-- Baum
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0024] occurrences matches {0..1} matches {	-- Letzte Aktualisierung
						value matches {
							DV_DATE_TIME matches {*}
						}
					}
					ELEMENT[at0025] occurrences matches {0..1} matches {	-- Bewertungsmethode
						value matches {
							DV_TEXT matches {*}
						}
					}
					allow_archetype CLUSTER[at0026] occurrences matches {0..*} matches {	-- Erweiterung
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}


ontology
	term_definitions = <
		["de"] = <
			items = <
				["at0000"] = <
					text = <"Bewertung des Gesundheitsrisikos">
					description = <"Bewertung der möglichen und wahrscheinlichen gesundheitsschädigenden Wirkungen anhand der identifizierten Risikofaktoren.">
				>
				["at0001"] = <
					text = <"Baum">
					description = <"@ internal @">
				>
				["at0002"] = <
					text = <"Baum">
					description = <"@ internal @">
				>
				["at0003"] = <
					text = <"Gesundheitsrisiko">
					description = <"Identifizierung der potenziellen zukünftigen Krankheit, des Zustands oder des Gesundheitsproblems, für die das Risiko bewertet wird.">
					comment = <"Wenn möglich, wird die Kodierung des Gesundheitsrisikos mit einer Terminologie bevorzugt.
 Freier Text sollte nur verwendet werden, wenn keine geeignete Terminologie vorhanden ist.">
				>
				["at0005"] = <
					text = <"Risikofaktoren">
					description = <"Details zu jedem möglichen Risikofaktor.">
				>
				["at0006"] = <
					text = <"Risikofaktor">
					description = <"Namentliche Identifizierung der Risikofaktoren.">
					comment = <"Zum Beispiel: Hypertonie und Hypercholesterinämie, die als Teil der Gesamtbewertung für Herz-Kreislauf-Erkrankungen verwendet werden können; oder ein genetischer Marker. 
Die Kodierung des \"Risikofaktor\" sollte, wenn möglich, mit Hilfe einer Terminologie erfolgen.">
				>
				["at0007"] = <
					text = <"Risikofaktor vorhanden">
					description = <"Vorhandensein des Risikofaktors.">
				>
				["at0008"] = <
					text = <"Vorhanden">
					description = <"Der Risikofaktor wurde für diese Person identifiziert.">
				>
				["at0009"] = <
					text = <"Unbekannt">
					description = <"Es ist nicht möglich festzustellen, ob der Risikofaktor vorhanden ist oder nicht.">
				>
				["at0010"] = <
					text = <"Nicht vorhanden">
					description = <"Der Risikofaktor wurde für diese Person nicht identifiziert.">
				>
				["at0011"] = <
					text = <"Beschreibung">
					description = <"Beschreibung des Risikofaktors.">
				>
				["at0012"] = <
					text = <"Identifizierungszeitpunkt">
					description = <"Das Datum/die Uhrzeit, zu der der Risikofaktor identifiziert wurde.">
				>
				["at0013"] = <
					text = <"Abgeschwächt">
					description = <"Der Risikofaktor wurde als vorhanden identifiziert, anschließend jedoch durch Behandlung oder Untersuchung gemindert.">
					comment = <"Als wahr dokumentieren, wenn der Risikofaktor behandelt oder untersucht wurde und das Risiko dadurch als vermindert angesehen werden kann. Zum Beispiel: Bei einem Säugling, der Gentamicin auf der Intensivstation für Neugeborene erhält, besteht das Risiko eines dauerhaften Hörverlustes. Wenn die Untersuchung im ersten Lebensjahr keine Anzeichen eines Hörverlustes zeigt, wird das Risiko eines späteren Hörverlustes als sehr gering, aber immer noch möglich angesehen. Das Datenelement ermöglicht es den Klinikern mitzuteilen, dass das Risiko vermindert ist, aber in Zukunft immer noch als möglich betrachtet werden sollte. In der Praxis kann der Risikofaktor in der Risikobewertung für den Fall, dass er sich zu einem späteren Zeitpunkt auf den Gesundheitszustand des Einzelnen auswirken könnte, beibehalten werden. Dennoch weist er darauf hin, dass sein Beitrag zur Risikobewerrtung möglicherweise nicht so hoch ist, wenn er nicht zuvor behandelt oder untersucht worden wäre.">
				>
				["at0014"] = <
					text = <"Link zum Nachweis">
					description = <"Identifizierung des Pfades zum Archetyp oder Datenknoten zum Nachweis des Risikos.">
				>
				["at0015"] = <
					text = <"Detail">
					description = <"Strukturierte Details zu anderen Aspekten der Risikofaktorbewertung.">
					comment = <"Zum Beispiel: Prävalenz des Risikofaktors bei Familienmitgliedern.">
				>
				["at0016"] = <
					text = <"Kommentar">
					description = <"Zusätzliche Informationen zum Risikofaktor, welche in anderen Bereichen nicht erfasst wurden.">
				>
				["at0017"] = <
					text = <"Risikobewertung">
					description = <"Bewertung des Gesundheitsrisikos.">
					comment = <"Die Risikoeinschätzung kann vielfältig variieren. Der Entscheidungs-Datentyp ermöglicht die Aufzeichnung der Bewertung als Freitext oder Wertemengen (z.B. niedrig, mittel oder hoch). Der Proportions-Datentyp ermöglicht die Aufzeichnung eines Prozentsatzes, eines Verhältnisses oder eines Bruches. Der Datentyp Menge ermöglicht die Aufzeichnung einer Dezimalzahl.">
				>
				["at0018"] = <
					text = <"Bewertungstyp">
					description = <"Zur Dokumentation der relativen oder absoluten Risikobewertung.">
				>
				["at0019"] = <
					text = <"Relatives Risiko">
					description = <"Verhältnis der Wahrscheinlichkeit des Auftretens eines Gesundheitsereignisses oder -zustands im Vergleich zu einer Population mit ähnlichen Merkmalen, z. B. gleichem Alter und Geschlecht.">
				>
				["at0020"] = <
					text = <"Absolutes Risiko">
					description = <"Verhältnis der Wahrscheinlichkeit des Auftretens eines Gesundheitsereignisses oder -zustands im Vergleich zur Gesamtbevölkerung.">
				>
				["at0021"] = <
					text = <"Zeitraum">
					description = <"Der Zeitraum, in dem das vorhergesagte Gesundheitsrisiko relevant ist.">
					comment = <"Das bedeutet: Das Risiko, in den nächsten Jahren das identifizierte „Gesundheitsrisiko“ zu erleiden.">
				>
				["at0022"] = <
					text = <"Begründung">
					description = <"Begründung für diese Risikobewertung.">
					comment = <"Details, die zu diesem Datenelement hinzugefügt werden können. Dies können zum Beispiel Informationen über die Bevölkerung sein, für die die Risikobewertung erfolgt.">
				>
				["at0023"] = <
					text = <"Kommentar">
					description = <"Zusätzliche Informationen der Risikobewertung, die in anderen Bereichen nicht erfasst wurde.">
				>
				["at0024"] = <
					text = <"Letzte Aktualisierung">
					description = <"Das Datum an dem die Bewertung des Gesundheitsrisikos zuletzt aktualisiert wurde.">
					comment = <"Dieses Datenelement kann als redundant angesehen werden, wenn die Daten unter Verwendung von COMPOSITIONs innerhalb eines geschlossenen klinischen Systems aufgezeichnet und gespeichert werden. Wenn diese Gesundheitsrisikodaten jedoch aus ihrem ursprünglichen Kontext extrahiert werden, beispielsweise um sie in eine Entlassungszusammenfassung oder -nachricht aufzunehmen, dann wird der zeitliche Kontext, wenn der Archetyp innerhalb einer anderen COMPOSITION verwendet wird, entfernt. Dieses Datenelement \"Letzte Aktualisierung\" wurde hinzugefügt, damit die Daten zum Zeitpunkt unter allen Umständen mit den klinischen Daten übereinstimmen. Es wird angenommen, dass das klinische System das Datum aus der COMPOSITION kopieren kann, um doppelte Eingabe durch den Kliniker zu vermeiden.">
				>
				["at0025"] = <
					text = <"Bewertungsmethode">
					description = <"Identifikation des Algorithmus oder der Leitlinie, welche für die Risikobewertung verwendet wurde.">
					comment = <"Zum Beispiel: Framingham Herz-Kreislauf-Risiko-Kalkulator.">
				>
				["at0026"] = <
					text = <"Erweiterung">
					description = <"Zusätzliche Informationen, welche zum Erfassen lokaler Inhalte oder zum Abgleich mit anderen Referenzmodellen / Formalismen erforderlich sind.">
					comment = <"Zum Beispiel: lokale Informationsanforderungen oder zusätzliche Metadaten zur Anpassung an FHIR oder CIMI.">
				>
			>
		>
	>
